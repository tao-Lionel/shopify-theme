    //   "settings": [
    //     {
    //       "type": "richtext",
    //       "id": "paragraph_content",
    //       "label": "富文本"
    //     }
    //   ]
    // }
  ],
  "presets": [
    {
      "name": "文章标题(定制) "
    }
  ]
}
{% endschema %}
