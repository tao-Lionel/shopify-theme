{% schema %}
{
  "name": "文章标题(定制)",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "info": "Only has effect when spacing is set to none.",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "行",
      "limit": 2,
      "settings": [
        {
          "type": "richtext",
          "id": "paragraph_content",
          "label": "富文本"
        },
        {
          "type": "font_picker",
          "id": "paragraph_font",
          "label": "选择字体",
          "default": "helvetica_n4"
        },
        {
          "type": "image_picker",
          "id": "paragraph_image",
          "label": "选择图片"
        },
        {
          "type": "radio",
          "id": "paragraph_iamge_postion",
          "label": "图片位置",
          "options": [
            {
              "value": "left",
              "label": "居左"
            },
            {
              "value": "right",
              "label": "居右"
            }
          ],
          "default":"right"
        }
      ]
    }
    // {
